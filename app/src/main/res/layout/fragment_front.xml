<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="azynias.study.Fragments.FrontFragment">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
                android:id="@+id/dashboard_progress"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:textSize="34sp"
                    android:id="@+id/title_progress_dashb_frag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
                <View
                    android:background="@drawable/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </View>
                <TextView
                    android:id="@+id/items_overdue_dashb_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tierbracket_dashb_frag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView

                    android:id="@+id/grade_dashb_frag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/dashboard_study"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="34sp"
                android:id="@+id/title_study_dashb_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STUDY"
                />
            <View
                android:background="@drawable/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </View>
            <TextView
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:id="@+id/study_kanji_chars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/study_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="REVIEW"
                android:id="@+id/review_title_dashb_frag"
                android:textSize="34sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@drawable/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </View>
            <TextView
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:id="@+id/review_chars_dashb_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/review_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/due_review_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
